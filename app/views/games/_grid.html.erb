<%= grid(@tasks_grid, upper_pagination_panel: true) do |g|

  g.column name:'In DB?', attribute:'in_db' do |task|
    task.in_db? ? 'Yes' : 'No'
  end

  g.column name: 'App name', attribute:'game_name' do |task|
    task.game_name
  end

  g.column name: 'Platform', attribute:'platform', custom_filter: ['iOS', 'Android'] do |task|
    task.platform
  end

  g.column name: 'Promo', attribute:'english_promo' do |task|
      task.english_promo
  end

  g.column name: 'Landscape image', attribute:'landscape' do |task|
    if task.landscape != "empty"
      link_to 'See banner', task.landscape, :target => "_blank"
    else
      task.landscape
    end
  end

  g.column name: 'Portrait image', attribute:'portrait' do |task|
    if task.portrait != "empty"
      link_to 'See banner', task.portrait, :target => "_blank"
    else
      task.portrait
    end
  end

  g.column name:'300x250 banner', attribute:'square_banner' do |task|
    if task.square_banner != "empty"
      link_to 'See banner', task.square_banner, :target => "_blank"
    else
      task.square_banner
    end
  end

  g.column name:'320x50 banner', attribute:'flat_banner' do |task|
    if task.flat_banner != "empty"
      link_to 'See banner', task.flat_banner, :target => "_blank"
    else
      task.flat_banner
    end
  end

  g.column name:'video', attribute:'english_vid' do |task|
    if task.english_vid != "empty"
      link_to 'Watch video', task.english_vid, :target => "_blank"
    else
      task.english_vid
    end
  end    

end %>

